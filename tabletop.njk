<ul class="library-list">
    {% for game in tabletop %}
        <li>
            {% if game.cover %}
                <img src="{{ game.cover }}" alt="" class="library-cover" style="border-radius: 0.25ch;">
            {% else %}
                <div class="library-cover placeholder" style="aspect-ratio: 1;"></div>
            {% endif %}
            <strong style="font-family: var(--sans);">{{ game.title }}</strong>
            {% if game.publisher %}<br><span class="library-author">{{ game.publisher }}</span>{% endif %}
            {% if game.players %}<br><span>{{ game.players }} Players</span>{% endif %}
            {% if game.expansions %}<br><span class="meta-text">+ {{ game.expansions }}</span>{% endif %}

        </li>
    {% endfor %}

</ul>