<ul reversed class="archive journal-list">
{% for post in collections.journal | reverse %}
  <li style="view-transition-name: {{post.fileSlug}}">
    {% if post.data.redirect %}
    <a href="{{ post.data.redirect | url }}" class="journal-list-title">â†³ 
    {% else %}
    <a href="{{ post.url | url }}" class="journal-list-title">
    {% endif %}
    {{ post.data.title }}</a>
    <time datetime="{{ post.date.toUTCString() }}"  class="journal-list-date">{{ post.date | readableDate}}</time>
  </li>
{% endfor %}
</ul>