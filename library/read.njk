<ul class="library-list">
{% for book in books %}
{% if book.read %}

        <li>
            {% if book.cover %}
                <img src="{{ book.cover }}" alt="" class="library-cover" loading="lazy">
            {% else %}
                <img style="width: 100%; aspect-ratio: 1 / 1.25; display: block; background-color: var(--underline); opacity: 0.25;"></img>
            {% endif %}
            <span class="library-title">{{ book.title }}</span><br>
            <span class="library-author">{{ book.author }}</span>
            <br>
            {% if book.own %}<span class="h4">IN LIBRARY</span><br>{% endif %}
            <span class="icons">
                {% if book.favourite %}⭐️{% endif %} 
                {% if book.read %}✅{% endif %}
            </span>
            {% if book.review %}<br><a href="{{book.review}}">Review</a>{% endif %}
        </li>
{% endif %}
{% endfor %}
 </ul>


